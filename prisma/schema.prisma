// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id

  // Relations
  scamguild   ScamGuild[]
}

model Invite {
  id   String @id @default(cuid())
  code String @unique

  // Relations
  scamguild   ScamGuild? @relation(fields: [scamguildId], references: [id], onDelete: Cascade)
  scamguildId String?
}

model ScamGuild {
  id String @id

  reason    String
  credits   String[]
  admins    User[]
  invites   Invite[]
  guildType String
}
